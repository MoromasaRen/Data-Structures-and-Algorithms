void displayBit(char val){
    printf("Binary Representation:\n");
    int bits = sizeof(char) * 8;
    unsigned int mask = 1 << (bits - 1);
    
    while (mask != 0){
        printf("%d ", (val & mask) ? 1 : 0);
        mask >>= 1;
    }
    printf("\n");
}
